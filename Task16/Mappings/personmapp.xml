<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Task16" 
                   namespace="Task16.Domain">

    <class name="Person" table="testdb.persons">
        <id name="Id" column="id" type="Int32">
            <generator class="sequence">
                <param name="sequence">testdb.persons_id_seq</param>
            </generator>
        </id>
        
        <property name="Name" column="name" type="String"></property>

        <bag name="CarsOwned" table="testdb.cars" inverse="true" lazy="true">
            <key column="id"></key>
            <one-to-many class="Task16.Domain.Car"></one-to-many>
        </bag>

    </class>

</hibernate-mapping>